using System.Security.Cryptography.X509Certificates;

public class Item
{
    protected double Price { get; set; }

    public Item()
    {
        Price = 0;
    }
}

public class Fruit : Item
{
    private int _weightInKg;
    private int _priceOfOneKg;

    public double CalculateTotalPrice()
    {
        return Price = _weightInKg * _priceOfOneKg;
    }
    public double CalculateTotalPrice(int weightInKg, int priceOfOneKg)
    {
        return Price = weightInKg * priceOfOneKg;
    }
}

public class Electronics : Item
{
    private int _quantity;
    private double _oneUnitPrice;

    public double CalculateTotalPrice()
    {
        return Price = _quantity * _oneUnitPrice;
    }
    public double CalculateTotalPrice(int quantity, double oneUnitPrice)
    {
        return Price = quantity * oneUnitPrice;
    }
}

class program
{
    static void Main(string[] args)
    {
        Fruit tomato = new Fruit();
        Console.WriteLine(tomato.CalculateTotalPrice(4, 3));

        Electronics mobile = new Electronics();
        Console.WriteLine(mobile.CalculateTotalPrice(6, 2));
    }
}
